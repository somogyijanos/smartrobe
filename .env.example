# =============================================================================
# SMARTROBE - Multi-Model Attribute Extraction Service
# Environment Configuration Template
# =============================================================================

# DATABASE CONFIGURATION
DATABASE_URL=postgresql+asyncpg://smartrobe:password@localhost:5432/smartrobe
POSTGRES_USER=smartrobe
POSTGRES_PASSWORD=password
POSTGRES_DB=smartrobe

# SERVICE CONFIGURATION
ORCHESTRATOR_PORT=8000
VISION_SERVICE_PORT=8001
HEURISTIC_SERVICE_PORT=8002
LLM_SERVICE_PORT=8003

VISION_SERVICE_URL=http://vision_classifier:8001
HEURISTIC_SERVICE_URL=http://heuristic_model:8002
LLM_SERVICE_URL=http://llm_model:8003

# SHARED STORAGE
SHARED_STORAGE_PATH=/app/shared_storage

# IMAGE PROCESSING
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,webp
IMAGE_DOWNLOAD_TIMEOUT=30

# API CONFIGURATION
SERVICE_REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# LOGGING
LOG_LEVEL=INFO
LOG_FORMAT=json

# DEVELOPMENT SETTINGS
DEBUG=false
ENVIRONMENT=development