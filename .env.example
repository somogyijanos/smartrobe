# =============================================================================
# SMARTROBE - Multi-Model Attribute Extraction Service
# Environment Configuration Template
# =============================================================================

# Database
POSTGRES_USER=smartrobe
POSTGRES_PASSWORD=password
POSTGRES_DB=smartrobe

# External Port Mapping (Host Machine)
ORCHESTRATOR_EXTERNAL_PORT=8000
HEURISTICS_EXTERNAL_PORT=8010
LLM_MULTIMODAL_EXTERNAL_PORT=8011
FASHION_CLIP_EXTERNAL_PORT=8012
MICROSOFT_FLORENCE_EXTERNAL_PORT=8013
POSTGRES_EXTERNAL_PORT=5432

# Image Processing (only orchestrator needs these)
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png,webp
IMAGE_DOWNLOAD_TIMEOUT=30
DEBUG_RETAIN_IMAGES=false

# API Configuration (only orchestrator needs these)
SERVICE_REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# Logging (all services need these)
LOG_LEVEL=INFO
LOG_FORMAT=text

# Environment (all services need these)
DEBUG=false
ENVIRONMENT=development

# Storage (all services need this)
SHARED_STORAGE_PATH=/app/shared_storage