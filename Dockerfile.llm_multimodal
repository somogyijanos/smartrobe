# LLM Multimodal service Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY pyproject.toml uv.lock ./
RUN pip install uv && uv pip install --system --no-cache -r pyproject.toml

# Copy shared modules
COPY shared/ shared/

# Copy service code
COPY services/llm_model/llm_multimodal/ services/llm_model/llm_multimodal/

# Set Python path to include the app directory
ENV PYTHONPATH=/app

# Create non-root user
RUN useradd -m -u 1001 smartrobe
USER smartrobe

# Expose port
EXPOSE 8000

# Run the service
CMD ["python", "-m", "uvicorn", "services.llm_model.llm_multimodal.app:create_app", "--factory", "--host", "0.0.0.0", "--port", "8000"]
